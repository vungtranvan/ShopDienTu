@{
    ViewData["Title"] = "Index";
    var culture = CultureInfo.CurrentCulture;
}
@section Scripts{
    <script src="~/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}

<ul class="breadcrumb">
    <li><a href="/@culture">Home</a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>
<h3>  SHOPPING CART [ <small><span class="lbl_number_of_items">0</span> Item(s) </small>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
<hr class="soft" />

<div id="tbl_cart">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Product Image</th>
                <th>Description</th>
                <th>Quantity/Update</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody id="cart_body">
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5" style="text-align:right"><strong>TOTAL =</strong></td>
                <td class="label label-important" style="display:block"> <strong> <span id="lbl_total"></span> </strong></td>
            </tr>
        </tfoot>
    </table>
    <a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>
    <a href="/@culture/Order/Checkout" class="btn btn-large pull-right">Next <i class="icon-arrow-right"></i></a>
</div>

