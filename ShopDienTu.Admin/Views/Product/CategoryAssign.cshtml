@model ShopDienTu.ViewModels.Catalog.Product.CategoryAssignRequest
@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card-header">
                <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về trang Danh sách</a>
            </div>
            <div class="card-body">
                <div class="card-body">
                    <form asp-action="CategoryAssign">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        @for (var i = 0; i < Model.Categories.Count; i++)
                        {
                            <div class="form-group">
                                <label>
                                    @Model.Categories[i].Name
                                    <input type="checkbox" asp-for="Categories[i].Selected" />
                                    <input type="hidden" asp-for="Categories[i].Id" />
                                    <input type="hidden" asp-for="Categories[i].Name" />
                                </label>
                            </div>
                        }
                        <div class="form-group">
                            <input type="submit" value="Lưu lại" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

