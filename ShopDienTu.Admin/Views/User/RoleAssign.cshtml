@model ShopDienTu.ViewModels.System.Users.RoleAssignRequest
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card-header">
                    <a class="btn btn-success" asp-action="Index" asp-controller="User">Về trang Danh sách</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="RoleAssign">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                @for (var i = 0; i < Model.Roles.Count; i++)
                                {
                                    <div class="form-group">
                                        <label>
                                            @Model.Roles[i].Name
                                            <input type="checkbox" asp-for="Roles[i].Selected" />
                                            <input type="hidden" asp-for="Roles[i].Id" />
                                            <input type="hidden" asp-for="Roles[i].Name" />
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>